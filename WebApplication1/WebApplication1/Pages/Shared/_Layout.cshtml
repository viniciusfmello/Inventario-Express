<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Layoutcss.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <!--Nav bar-->
        <nav class="nav-bar">


            <div class="info-usuario">
                @if (LoginuserModel.isUsuarioLogado)
                {
                    <img src="https://source.unsplash.com/random" alt="foto-de-perfil" id="logo">
                    <p>@LoginuserModel.NomeAtual</p>
                }
                
            </div>


            <div>
                <span id="logo-empresa"><i class="bi bi-cart-check-fill"></i></span>
                <span id="titulo-empresa">Inventário Express</span>
            </div>

            <div class="btn">
                @if (LoginuserModel.isUsuarioLogado)
                {
                    <button class="btn-header">
                        <a asp-page="/logout" asp-area="">Sair</a>
                    </button>
                }
            </div>

            <!--mobile -->
            <div class="btn-abrir-menu" id="btn-menu">
                <i class="bi bi-list"></i>
            </div>

            <div class="menu-mobile" id="menu-mobile">
                <div class="btn-fechar">
                    <i class="bi bi-x-lg"></i>
                </div>

                <nav>
                    <ul>
                        <li><a asp-page="/Index" asp-area="">Dashboard</a></li>
                        <li><a asp-page="/Estoque" asp-area="">Estoque</a></li>
                        <li><a href="Fornecedor.html">Fornecedor</a></li>
                        <li><a href="cadastro.html">Novo Produto</a></li>
                        @if (LoginuserModel.isUsuarioLogado)
                        {
                            <li><a asp-page="/logout" asp-area="">Sair</a></li>
                        }
                        else
                        {
                            <li><a asp-page="/Loginuser" asp-area="">Login</a></li>
                        }
            
                    </ul>
                </nav>
            </div>

            <div class="overlay-menu" id="overlay-menu"></div>

        </nav>

    </header>


    <!--menu lateral-->
    <div class="div-menu-lateral">
        <nav class="menu-lateral">
            <ul>
                <li class="item-menu">
                    <a asp-page="/Index" asp-area="">
                        <span class="icon"><i class="bi bi-columns-gap"></i></span>
                        <span class="text-link">Dashboard</span>
                    </a>
                </li>
                <li class="item-menu">
                    <a asp-page="/Estoque" asp-area="">
                        <span class="icon"><i class="bi bi-boxes"></i></span>
                        <span class="text-link">Estoque</span>
                    </a>
                </li>
                <li class="item-menu">
                    <a asp-page="/Fornecedor" asp-area="">
                        <span class="icon"><i class="bi bi-truck-flatbed"></i></span>
                        <span class="text-link">Fornecedor</span>
                    </a>
                </li>
                <li class="item-menu">
                    <a asp-page="/Cadastro" asp-area="">
                        <span class="icon"><i class="bi bi-file-plus-fill"></i></span>
                        <span class="text-link">Novo Produto</span>
                    </a>
                </li>
                <li class="item-menu">
                    @if (LoginuserModel.isUsuarioLogado)
                    {
                        <a asp-page="/logout" asp-area="">
                            <span class="icon"><i class="bi bi-person-circle"></i></span>
                            <span class="text-link">Sair</span>
                        </a>
                    }
                    else
                    {
                        <a asp-page="/Loginuser" asp-area="">
                            <span class="icon"><i class="bi bi-person-circle"></i></span>
                            <span class="text-link">Login</span>
                        </a>
                    }

                </li>
            </ul>
        </nav>
    </div>


        <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Barralateraljs.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>